<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_maxima_critica_alerta"
            android:id="@+id/iv_legenda_icon"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/cd_legenda_pedido_icon"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_descricao_legenda"
            app:layout_constraintTop_toTopOf="@+id/iv_legenda_icon"
            app:layout_constraintBottom_toBottomOf="@+id/iv_legenda_icon"
            app:layout_constraintStart_toEndOf="@+id/iv_legenda_icon" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" tools:text="Falha parcial"/>
</android.support.constraint.ConstraintLayout>